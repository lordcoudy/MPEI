program Lab11;

{$APPTYPE CONSOLE}

uses
  windows;

Type Matr = array [1..10, 1..10] of real;
Type Mass = array [1..20] of byte;

Procedure Solve( nS: byte; var SB: Matr; var SC: Mass; var finS: Textfile; var foutS: TextFile; var sumS : real);
var Si, Sj : byte;
    Sk : bool;
    Sl : byte;
begin
      for Si := 1 to nS do
      begin
        for Sj := 1 to nS do
        begin
          read(finS, SB[Si, Sj]);
        end;
        readln(finS);
      end;
      writeln(foutS, 'n = ', nS:2);
      writeln(foutS, 'Исходная матрица: ');
      for Si:=1 to nS do
      begin
        for Sj:=1 to nS do write(foutS, SB[Si,Sj]:5:1,'   ');
        writeln(foutS);
      end;
      Sj := 1;
      Sk := false;
      sumS := 0;
      repeat
        Sl := 0;
        for Si := 1 to nS do
        begin
          sumS := sumS + SB[Si, Sj];
          if SB[Si, Sj] <> 0 then Sl := Sl + 1;
        end;
        if Sl = 3 then
        SC[Sj] := 1
        else
        SC[Sj] := 0;
        inc(Sj);
      until Sj = nS + 1;
      writeln(foutS, 'Полученный массив:');
      for Si := 1 to nS do
        writeln(foutS,'C[',Si,'] = ', SC[Si]);
      writeln(foutS, 'Сумма всех элементов матрицы sum = ', sumS:5:1);
end;

Function Min(Sum01 : real; Sum02: real; Sum03 : real) : byte;
begin
  if (abs(Sum01)<abs(Sum02)) and (abs(Sum01)<abs(Sum03)) then Min := 1
  else if (abs(Sum01)>abs(Sum02)) and (abs(Sum02)<abs(Sum03)) then Min := 2
  else if (abs(Sum01)>abs(Sum02)) and (abs(Sum02)>abs(Sum03)) then Min := 3
  else if (abs(Sum01)<abs(Sum02)) and (abs(Sum01)>abs(Sum03)) then Min := 3
  else if (abs(Sum01)=abs(Sum02)) and (abs(Sum01)<abs(Sum03)) then Min := 4
  else if (abs(Sum01)=abs(Sum02)) and (abs(Sum01)>abs(Sum03)) then Min := 3
  else if (abs(Sum01)>abs(Sum02)) and (abs(Sum02)=abs(Sum03)) then Min := 5
  else if (abs(Sum01)<abs(Sum02)) and (abs(Sum01)=abs(Sum03)) then Min := 6
  else Min := 0;
end;

var
  n1, n2, n3: byte;
  Sum1, Sum2, Sum3 : real;
  A, B, C : Matr;
  C1, C2, C3 : Mass;
  fin, fout: TextFile;
begin
  SetConsoleCP(1251);
  SetConsoleOutputCP(1251);
  if ParamCount<2 then begin writeln('CritError: Не заданы параметры программы'); readln; exit end;
  AssignFile(fin, ParamStr(1));
  AssignFile(fout, ParamStr(2));
  Reset(fin);
  Rewrite(fout);
  writeln(fout, 'Lab.10':40);
  readln(fin, n1, n2, n3);
  if (n1<2) or (n2<2) or (n3<2) then writeln(fout,'Введено n меньше 2')
  else if (n1>20) or (n2>20) or (n3>20) then writeln(fout, 'Введено n больше 20')
  else
  begin
    Solve(n1, A, C1, fin, fout, Sum1);
    Solve(n2, B, C2, fin, fout, Sum2);
    Solve(n3, C, C3, fin, fout, Sum3);
    case Min(Sum1, Sum2, Sum3) of
    0: writeln(fout, 'Сумма во всех массивах равна');
    1: writeln(fout, 'Наименьшая по абсолютной величине сумма всех элементов находится в массиве А');
    2: writeln(fout, 'Наименьшая по абсолютной величине сумма всех элементов находится в массиве B');
    3: writeln(fout, 'Наименьшая по абсолютной величине сумма всех элементов находится в массиве C');
    4: writeln(fout, 'Наименьшая по абсолютной величине сумма всех элементов находится в массивах А и В');
    5: writeln(fout, 'Наименьшая по абсолютной величине сумма всех элементов находится в массивах В и C');
    6: writeln(fout, 'Наименьшая по абсолютной величине сумма всех элементов находится в массивах А и C');
    end;
  end;
  CloseFile(fin);
  CloseFile(fout);
  writeln('Press ENTER...');
  readln;
end.
