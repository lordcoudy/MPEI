program Lab4;

{$APPTYPE CONSOLE}

var
n, i, M1, M2 : Integer;
C1, C2 : Integer;
Q : array [1..20] of Integer;
fin, fout: TextFile;
//Variant №2

begin
    if ParamCount<2 then begin writeln('CritError: Не заданы параметры программы'); readln; exit end;
    AssignFile(fin, ParamStr(1));
    AssignFile(fout, ParamStr(2));
	  Reset(fin);
 	  Rewrite(fout);
    C1 := 0;
    C2 := 0;
    M1 := 0;
    M2 := 0;
    writeln(fout, 'Lab.4' :40);
    readln(fin, n);
    if (n<=0) or (n>20) then begin writeln('WRONG'); readln; exit end;

    i:=1;
      repeat
          readln(fin, Q[i]);

                if Q[i] > 0 then
                begin
                  C2 := C2 + Q[i];
                  M2 := M2 + 1;
                end
                else if Q[i] < 0 then
                begin
                  C1 := C1 + Q[i];
                  M1 := M1 + 1;
                end;

          i := i + 1;


      until i = n + 1;

      writeln(fout,'n = ', n:2);
      for i := 1 to n do
        begin
          writeln(fout, 'Q[ ',i,' ] = ', Q[i]:4);
        end;
      if (C1 = 0) and (C2 = 0) then
              writeln(fout, 'No positive and negative elements, absolute zero!')
              else if C2 = 0 then
              writeln(fout, 'No positive elements, sum of negative is ',C1:5,' and number of them is ',M1:2)
              else if C1 = 0 then
              writeln(fout, 'No negative elements, sum of positive is ',C2:5,' and number of them is ',M2:2)
              else
              writeln(fout, 'Sum of positive elements is ',C2:5,' and negative is ',C1:5,'. Number of positive el is ',M2:2, ' and negative is ',M1:2);

    CloseFile(fin);
    CloseFile(fout);
    writeln('Press ENTER...');
    readln;
end.

