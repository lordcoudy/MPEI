program Lab5;

{$APPTYPE CONSOLE}

var
n, i: Integer;
S, M : Integer;
Q : array [1..20] of Integer;
fin, fout: TextFile;
//Variant №2

begin
    if ParamCount<2 then begin writeln('CritError: Не заданы параметры программы'); readln; exit end;
    AssignFile(fin, ParamStr(1));
    AssignFile(fout, ParamStr(2));
	  Reset(fin);
 	  Rewrite(fout);
    writeln(fout, 'Lab.5' :40);
    readln(fin, n);
    if (n<=1) or (n>20) then begin writeln(fout, 'n <= 1 or n > 20'); readln; exit end;
    for i := 1 to n do readln(fin, Q[i]);
    i := 2;
    M := abs(Q[2] - Q[1]);
    repeat
      S := Q[i] - Q[i-1];
      if abs(S) > M then M := abs(S);
      i := i + 1;
    until (i = n);

      writeln(fout,'n = ', n:2);
      for i := 1 to n do
        begin
          writeln(fout, 'Q[ ',i,' ] = ', Q[i]:4);
        end;
      writeln(fout,'Max is ', M:4);
    CloseFile(fin);
    CloseFile(fout);
    writeln('Press ENTER...');
    readln;
end.

