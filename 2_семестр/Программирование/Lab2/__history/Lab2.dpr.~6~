program Lab2;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,
  Windows,
  UnLab2 in 'UnLab2.pas';

var
  ch: char;
begin
  SetConsoleCP(1251);      // из модул€ Windows
  SetConsoleOutputCP(1251);

  repeat
    writeln('--------------------------------------');
    writeln('D - создать новый тип.файл в диалоге; ');
    writeln('N - создать из текстового файла; ');
    writeln('F - поиск и изменение; ');
    writeln('V - просмотр;');
    writeln('E - конец.');
    write('¬аш выбор?'); readln(ch);
    writeln('--------------------------------------');

    ch:= UpCase(ch);  // символ в верхний регистр (латиница)
    case ch of
//--------------------------------------------------------------
//----------перва€ часть: создание типизированного в диалоге ---
    'D': CreateTypedFile1;  // вызов соответствующей процедуры дл€ выбора D
//----------втора€ часть: создание типизированного файла из текстового
    'N': CreateTypedFile2;
//----------треть€ часть: поиск и редактирование ---------------
//    'F': FindIVAN;
//-----------просмотр----------------------------------------------
//    'V': ViewFile;
//-----------выход----------------------------------------------
    'E': exit;
//--------------------------------------------------------------
      else
        begin
          writeln('Ќет такой команды');
          write('Press ENTER'); readln;
        end;
    end;

  until ch='E';

end.
